<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:id="@+id/ll_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:background="#41414f"
    >

    <LinearLayout
        android:layout_marginRight="@dimen/dp_20"
        android:layout_marginLeft="@dimen/dp_20"
        android:orientation="vertical"
        android:layout_width="@dimen/dp_335"
        android:layout_height="wrap_content"
        android:background="@drawable/shape_white"
        android:gravity="center_horizontal"
        >

        <TextView
            android:textSize="@dimen/sp_17"
            android:layout_marginTop="@dimen/dp_24"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="等级优惠"
            android:textColor="@color/text_black"
            />
        <View
            android:layout_marginTop="@dimen/dp_18"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_1"
            android:background="#F7F7F7"
            />
        <RelativeLayout
            android:layout_marginTop="@dimen/dp_22"
            android:layout_marginRight="@dimen/dp_23"
            android:layout_marginLeft="@dimen/dp_23"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_30">
            <TextView
                android:layout_centerVertical="true"
                android:textSize="@dimen/sp_15"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="普通会员:"
                android:id="@+id/tv_levelName"
                android:textColor="@color/text_black"
                />

            <EditText
                android:layout_marginLeft="@dimen/dp_15"
                android:layout_toRightOf="@id/tv_levelName"
                android:paddingLeft="@dimen/dp_16"
                android:hint="折扣"
                android:textColorHint="#e2e2e2"
                android:background="@drawable/shape_edit"
                android:inputType="numberDecimal"
                android:textSize="@dimen/sp_12"
                android:id="@+id/et_discount"
                android:layout_width="@dimen/dp_128"
                android:layout_height="@dimen/dp_35"
                />
            <TextView
                android:paddingLeft="@dimen/dp_16"
                android:layout_toRightOf="@id/et_discount"
                android:layout_centerVertical="true"
                android:textSize="@dimen/sp_15"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="折"
                android:textColor="@color/text_black"
                />
        </RelativeLayout>


        <Button
            android:layout_marginBottom="@dimen/dp_30"
            android:id="@+id/btn_commit"
            android:layout_width="@dimen/dp_303"
            android:layout_height="@dimen/dp_40"
            android:layout_marginTop="@dimen/dp_40"
            android:background="@drawable/shape_gray"
            android:text="确定"
            android:textColor="@color/text_color_gray"
            android:textSize="@dimen/sp_17" />
    </LinearLayout>
</LinearLayout>

