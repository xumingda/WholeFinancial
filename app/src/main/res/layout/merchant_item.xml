<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:imagecontrol="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="@dimen/dp_131"
    xmlns:app="http://schemas.android.com/apk/res-auto">


    <TextView
        android:id="@+id/tv_shop_name"
        android:layout_marginTop="@dimen/dp_15"
        android:layout_marginLeft="@dimen/dp_13"
        android:textColor="@color/text_color_black"
        android:textSize="@dimen/sp_12"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="棒子桂林米粉（龙华春晓家园分店）"
        />
    <TextView
        android:visibility="gone"
        android:id="@+id/tv_state"
        android:layout_marginTop="@dimen/dp_15"
        android:layout_marginRight="@dimen/dp_13"
        android:layout_alignParentRight="true"
        android:textColor="@color/errorColor"
        android:textSize="@dimen/sp_12"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="待审核"
        />
    <com.ciba.wholefinancial.weiget.RoundImageView
        android:layout_below="@id/tv_shop_name"
        android:id="@+id/iv_shop"
        android:layout_marginTop="@dimen/dp_15"
        android:layout_marginLeft="@dimen/dp_15"
        android:layout_marginBottom="@dimen/dp_15"
        android:layout_width="@dimen/dp_103"
        android:layout_height="@dimen/dp_75"
        android:scaleType="fitXY"
        app:type="round"
        />
    <TextView
        android:layout_below="@id/tv_shop_name"
        android:layout_toRightOf="@id/iv_shop"
        android:id="@+id/tv_user_name"
        android:layout_marginTop="@dimen/dp_29"
        android:layout_marginLeft="@dimen/dp_17"
        android:textColor="@color/text_color_black"
        android:textSize="@dimen/sp_15"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="赵文卓"
        />
    <TextView
        android:layout_below="@id/tv_shop_name"
        android:id="@+id/tv_tellphone"
        android:layout_marginTop="@dimen/dp_29"
        android:layout_marginRight="@dimen/dp_14"
        android:layout_alignParentRight="true"
        android:textColor="@color/text_color_black"
        android:textSize="@dimen/sp_15"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="15879986959"
        />
    <ImageView
        android:layout_toRightOf="@id/iv_shop"
        android:layout_below="@id/tv_user_name"
        android:id="@+id/iv_location"
        android:layout_marginTop="@dimen/dp_15"
        android:layout_marginLeft="@dimen/dp_15"
        android:layout_width="@dimen/dp_13"
        android:layout_height="@dimen/dp_17"
        android:scaleType="fitCenter"
        android:src="@mipmap/location"
        />
    <TextView
        android:layout_below="@id/tv_user_name"
        android:layout_toRightOf="@id/iv_location"
        android:id="@+id/tv_address"
        android:layout_marginTop="@dimen/dp_15"
        android:layout_marginLeft="@dimen/dp_6"
        android:textColor="@color/text_color_black"
        android:textSize="@dimen/sp_12"
        android:layout_width="@dimen/dp_208"
        android:singleLine="true"
        android:ellipsize="end"
        android:layout_height="wrap_content"
        android:text="广东省深圳市布吉街道办布吉街3210号"
        />
</RelativeLayout>