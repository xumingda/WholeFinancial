<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/tab_background"
    android:id="@+id/ll_main"
    android:orientation="vertical" >

    <RelativeLayout
        android:id="@+id/rl_head"
        style="@style/tabTitleStyle">

        <TextView
            android:id="@+id/tv_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="新增"
            android:textColor="@color/text_black"
            android:textSize="@dimen/sp_15" />


        <ImageView
            android:id="@+id/iv_top_back"
            android:layout_width="@dimen/dp_8"
            android:layout_height="@dimen/dp_14"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/dp_14"
            android:src="@mipmap/top_back"
            android:gravity="center_vertical"
            android:scaleType="fitCenter" />


    </RelativeLayout>
    <View
        android:id="@+id/line_top"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_1"
        android:background="#f4f4f4"
        />
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:gravity="center_horizontal"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <RelativeLayout
                android:layout_marginLeft="@dimen/dp_20"
                android:layout_marginRight="@dimen/dp_20"
                android:layout_marginTop="@dimen/dp_20"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_42">
                <TextView
                    android:id="@+id/tv_activity_title"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:text="活动标题："
                    android:textSize="@dimen/sp_15"
                    android:textColor="@color/text_black"
                    />
                <EditText
                    android:textColorHint="#b8b8b8"
                    android:hint="请输入活动标题"
                    android:id="@+id/et_activity_title"
                    android:gravity="center_vertical"
                    android:paddingLeft="@dimen/dp_18"
                    android:textSize="@dimen/sp_15"
                    android:textColor="#363636"
                    android:layout_marginLeft="@dimen/dp_11"
                    android:background="@drawable/shape_edit"
                    android:layout_toRightOf="@id/tv_activity_title"
                    android:layout_width="@dimen/dp_259"
                    android:layout_height="match_parent" />
            </RelativeLayout>
            <RelativeLayout
                android:layout_marginLeft="@dimen/dp_20"
                android:layout_marginRight="@dimen/dp_20"
                android:layout_marginTop="@dimen/dp_15"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_42">
                <TextView
                    android:id="@+id/tv_activity_type"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:text="活动类型："
                    android:textSize="@dimen/sp_15"
                    android:textColor="@color/text_black"
                    />
                <TextView
                    android:textColorHint="#b8b8b8"
                    android:hint="请选择活动类型"
                    android:paddingRight="@dimen/dp_18"
                    android:drawableRight="@mipmap/income_down"
                    android:id="@+id/et_activity_type"
                    android:gravity="center_vertical"
                    android:paddingLeft="@dimen/dp_18"
                    android:textSize="@dimen/sp_15"
                    android:textColor="#363636"
                    android:layout_marginLeft="@dimen/dp_11"
                    android:background="@drawable/shape_edit"
                    android:layout_toRightOf="@id/tv_activity_type"
                    android:layout_width="@dimen/dp_259"
                    android:layout_height="match_parent" />
            </RelativeLayout>
            <RelativeLayout
                android:layout_marginLeft="@dimen/dp_20"
                android:layout_marginRight="@dimen/dp_20"
                android:layout_marginTop="@dimen/dp_15"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_42">
                <TextView
                    android:id="@+id/tv_activity_object"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:text="活动参与对象："
                    android:textSize="@dimen/sp_15"
                    android:textColor="@color/text_black"
                    />
                <TextView
                    android:id="@+id/tv_levelName"
                    android:text="请选择用户"
                    android:paddingRight="@dimen/dp_18"
                    android:drawableRight="@mipmap/income_down"
                    android:layout_centerVertical="true"
                    android:gravity="center_vertical"
                    android:paddingLeft="@dimen/dp_18"
                    android:textSize="@dimen/sp_12"
                    android:textColor="@color/errorColor"
                    android:layout_marginLeft="@dimen/dp_11"
                    android:background="@drawable/shape_gray"
                    android:layout_toRightOf="@id/tv_activity_object"
                    android:layout_width="@dimen/dp_259"
                    android:layout_height="@dimen/dp_30" />
            </RelativeLayout>
            <View
                android:layout_marginTop="@dimen/dp_20"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_4"
                android:background="#F7F7F7"
                />
            <RelativeLayout
                android:background="@drawable/shape_gray"
                android:layout_marginLeft="@dimen/dp_20"
                android:layout_marginRight="@dimen/dp_20"
                android:layout_marginTop="@dimen/dp_30"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_40">
                <TextView
                    android:layout_marginLeft="@dimen/dp_16"
                    android:id="@+id/tv_startTime_title"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:text="起初时间："
                    android:textSize="@dimen/sp_15"
                    android:textColor="@color/text_color_black"
                    />
                <View
                    android:id="@+id/line_start"
                    android:layout_width="@dimen/dp_1"
                    android:layout_height="match_parent"
                    android:background="#EBE8E8"
                    android:layout_marginLeft="@dimen/dp_9"
                    android:layout_toRightOf="@id/tv_startTime_title"
                    />
                <TextView
                    android:id="@+id/tv_startTime"
                    android:text="2019-3-14   12:00:00"
                    android:paddingRight="@dimen/dp_18"
                    android:layout_centerVertical="true"
                    android:gravity="center_vertical"
                    android:paddingLeft="@dimen/dp_18"
                    android:textSize="@dimen/sp_15"
                    android:textColor="@color/text_color_black"
                    android:layout_marginLeft="@dimen/dp_13"
                    android:layout_toRightOf="@id/line_start"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_30" />
            </RelativeLayout>
            <RelativeLayout
                android:background="@drawable/shape_gray"
                android:layout_marginLeft="@dimen/dp_20"
                android:layout_marginRight="@dimen/dp_20"
                android:layout_marginTop="@dimen/dp_19"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_40">
                <TextView
                    android:layout_marginLeft="@dimen/dp_16"
                    android:id="@+id/tv_endTime_title"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:text="结束时间："
                    android:textSize="@dimen/sp_15"
                    android:textColor="@color/text_color_black"
                    />
                <View
                    android:id="@+id/line_end"
                    android:layout_width="@dimen/dp_1"
                    android:layout_height="match_parent"
                    android:background="#EBE8E8"
                    android:layout_marginLeft="@dimen/dp_9"
                    android:layout_toRightOf="@id/tv_endTime_title"
                    />
                <TextView
                    android:id="@+id/tv_endTime"
                    android:text="2019-3-14   12:00:00"
                    android:paddingRight="@dimen/dp_18"
                    android:layout_centerVertical="true"
                    android:gravity="center_vertical"
                    android:paddingLeft="@dimen/dp_18"
                    android:textSize="@dimen/sp_15"
                    android:textColor="@color/text_color_black"
                    android:layout_marginLeft="@dimen/dp_13"
                    android:layout_toRightOf="@id/line_end"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_30" />
            </RelativeLayout>
            <TextView
                android:text="活动设置："
                android:textColor="@color/text_black"
                android:textSize="@dimen/sp_15"
                android:layout_marginLeft="@dimen/dp_20"
                android:layout_marginRight="@dimen/dp_20"
                android:layout_marginTop="@dimen/dp_29"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
            <EditText
                android:textColorHint="#b8b8b8"
                android:hint="请输入备注"
                android:id="@+id/et_remark"
                android:gravity="center_vertical"
                android:paddingLeft="@dimen/dp_18"
                android:textSize="@dimen/sp_15"
                android:textColor="#363636"
                android:layout_marginLeft="@dimen/dp_20"
                android:layout_marginRight="@dimen/dp_20"
                android:layout_marginTop="@dimen/dp_19"
                android:background="@drawable/shape_edit"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_50" />

            <Button
                android:layout_marginBottom="@dimen/dp_20"
                android:id="@+id/btn_save"
                android:layout_width="@dimen/dp_278"
                android:layout_height="@dimen/dp_36"
                android:layout_marginTop="@dimen/dp_57"
                android:background="@drawable/shape_update_btn"
                android:text="保存"
                android:textColor="@color/tab_background"
                android:textSize="@dimen/sp_15" />
        </LinearLayout>
    </ScrollView>

</LinearLayout>