<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:imagecontrol="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="@dimen/dp_110"
    xmlns:app="http://schemas.android.com/apk/res-auto">


    <TextView
        android:id="@+id/tv_shop_name"
        android:layout_marginTop="@dimen/dp_18"
        android:layout_marginLeft="@dimen/dp_13"
        android:textColor="@color/text_color_black"
        android:textSize="@dimen/sp_16"
        android:layout_width="@dimen/dp_133"
        android:ellipsize="end"
        android:singleLine="true"
        android:layout_height="wrap_content"
        />

    <TextView
        android:layout_below="@id/tv_shop_name"
        android:id="@+id/tv_table_number"
        android:layout_marginTop="@dimen/dp_11"
        android:layout_marginLeft="@dimen/dp_13"
        android:layout_width="@dimen/dp_86"
        android:layout_height="wrap_content"
        android:ellipsize="end"
        android:singleLine="true"
        android:textSize="@dimen/sp_14"
        android:textColor="#ACAEB4"
        />
    <TextView
        android:layout_below="@id/tv_table_number"
        android:id="@+id/tv_date"
        android:layout_marginTop="@dimen/dp_10"
        android:layout_marginLeft="@dimen/dp_13"
        android:textColor="#ACAEB4"
        android:textSize="@dimen/sp_14"
        android:ellipsize="end"
        android:singleLine="true"
        android:layout_width="@dimen/dp_143"
        android:layout_height="wrap_content"
        />

    <TextView
        android:layout_centerVertical="true"
        android:id="@+id/tv_price"
        android:layout_marginLeft="@dimen/dp_186"
        android:textColor="@color/text_black"
        android:textSize="@dimen/sp_15"
        android:layout_width="@dimen/dp_40"
        android:ellipsize="end"
        android:singleLine="true"
        android:layout_height="wrap_content"

        />
    <TextView
        android:layout_centerVertical="true"
        android:id="@+id/tv_rate"
        android:layout_marginLeft="@dimen/dp_251"
        android:textColor="@color/text_black"
        android:textSize="@dimen/sp_15"
        android:layout_width="@dimen/dp_50"
        android:ellipsize="end"
        android:singleLine="true"
        android:layout_height="wrap_content"
        android:text="0.18%"
        />
    <TextView
        android:layout_centerVertical="true"
        android:id="@+id/tv_add"
        android:layout_marginRight="@dimen/dp_12"
        android:layout_alignParentRight="true"
        android:textColor="@color/text_black"
        android:textSize="@dimen/sp_15"
        android:layout_width="@dimen/dp_50"
        android:ellipsize="end"
        android:singleLine="true"
        android:layout_height="wrap_content"
        android:text="+0.58"
        />
</RelativeLayout>