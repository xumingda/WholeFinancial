<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/ll_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f4f4f4"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/rl_head"
        style="@style/tabTitleStyle">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="商户资料"
            android:textColor="@color/text_black"
            android:textSize="@dimen/sp_15" />


        <ImageView
            android:id="@+id/iv_top_back"
            android:layout_width="@dimen/dp_8"
            android:layout_height="@dimen/dp_14"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/dp_14"
            android:gravity="center_vertical"
            android:scaleType="fitXY"
            android:src="@mipmap/top_back" />
    </RelativeLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="@dimen/dp_14"
        android:layout_marginTop="@dimen/dp_16"
        android:layout_marginRight="@dimen/dp_14"
        android:layout_marginBottom="@dimen/dp_16">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/shape_white">

                <TextView
                    android:id="@+id/tv_title"
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/dp_20"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="@dimen/dp_16"
                    android:text="店铺信息"
                    android:textColor="@color/text_color_black"
                    android:textSize="@dimen/sp_14" />

                <View
                    android:layout_width="@dimen/dp_21"
                    android:layout_height="@dimen/dp_1"
                    android:layout_marginLeft="@dimen/dp_110"
                    android:layout_marginTop="@dimen/dp_27"
                    android:background="@color/text_color_black" />

                <View
                    android:layout_width="@dimen/dp_21"
                    android:layout_height="@dimen/dp_1"
                    android:layout_alignParentRight="true"
                    android:layout_marginTop="@dimen/dp_27"
                    android:layout_marginRight="@dimen/dp_110"
                    android:background="@color/text_color_black" />

                <TextView
                    android:id="@+id/tv_shop_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/tv_title"
                    android:layout_marginLeft="@dimen/dp_19"
                    android:layout_marginTop="@dimen/dp_21"
                    android:text="店铺名称："
                    android:textColor="@color/text_color_black"
                    android:textSize="@dimen/sp_12" />

                <EditText
                    android:hint="填写营业执照的全称，如无证随意"
                    android:id="@+id/et_shop_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/tv_title"
                    android:layout_marginLeft="@dimen/dp_5"
                    android:layout_marginTop="@dimen/dp_21"
                    android:layout_marginRight="@dimen/dp_19"
                    android:layout_toRightOf="@id/tv_shop_name"
                    android:background="@null"
                    android:textSize="@dimen/sp_12" />

                <TextView
                    android:id="@+id/tv_merchantshortname"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/tv_shop_name"
                    android:layout_marginLeft="@dimen/dp_19"
                    android:layout_marginTop="@dimen/dp_9"
                    android:text="店铺简称："
                    android:textColor="@color/text_color_black"
                    android:textSize="@dimen/sp_12" />

                <EditText
                    android:id="@+id/et_merchantshortname"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/tv_shop_name"
                    android:layout_marginLeft="@dimen/dp_5"
                    android:layout_marginTop="@dimen/dp_9"
                    android:layout_marginRight="@dimen/dp_19"
                    android:layout_toRightOf="@id/tv_merchantshortname"
                    android:background="@null"
                    android:textSize="@dimen/sp_12" />

                <TextView
                    android:id="@+id/tv_address"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/tv_merchantshortname"
                    android:layout_marginLeft="@dimen/dp_19"
                    android:layout_marginTop="@dimen/dp_9"
                    android:text="店铺地址："
                    android:textColor="@color/text_color_black"
                    android:textSize="@dimen/sp_12" />

                <EditText
                    android:hint="请填写营业执照的地址-如无证随意"
                    android:id="@+id/et_address"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/tv_merchantshortname"
                    android:layout_marginLeft="@dimen/dp_5"
                    android:layout_marginTop="@dimen/dp_9"
                    android:layout_marginRight="@dimen/dp_19"
                    android:layout_toRightOf="@id/tv_address"
                    android:background="@null"
                    android:textSize="@dimen/sp_12" />

                <TextView
                    android:id="@+id/tv_storeAddressCode"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/tv_address"
                    android:layout_marginLeft="@dimen/dp_19"
                    android:layout_marginTop="@dimen/dp_9"
                    android:text="店铺省市编："
                    android:textColor="@color/text_color_black"
                    android:textSize="@dimen/sp_12" />

                <TextView
                    android:id="@+id/et_storeAddressCode"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/tv_address"
                    android:layout_marginLeft="@dimen/dp_5"
                    android:layout_marginTop="@dimen/dp_9"
                    android:layout_marginRight="@dimen/dp_19"
                    android:layout_toRightOf="@id/tv_storeAddressCode"
                    android:background="@null"
                    android:hint="请点击进行选择"
                    android:textSize="@dimen/sp_12" />

                <TextView
                    android:id="@+id/tv_business_license"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/tv_storeAddressCode"
                    android:layout_marginLeft="@dimen/dp_19"
                    android:layout_marginTop="@dimen/dp_23"
                    android:text="营业执照(必填，无证可随意放个照片)"
                    android:textColor="@color/defaultBlueColor"
                    android:textSize="@dimen/sp_12" />

                <ImageView
                    android:id="@+id/iv_business_license"
                    android:layout_width="@dimen/dp_78"
                    android:layout_height="@dimen/dp_78"
                    android:layout_below="@id/tv_business_license"
                    android:layout_marginLeft="@dimen/dp_19"
                    android:layout_marginTop="@dimen/dp_13"
                    android:scaleType="fitXY"
                    android:src="@mipmap/img_add" />

                <View
                    android:id="@+id/line"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_1"
                    android:layout_below="@id/iv_business_license"
                    android:layout_marginLeft="@dimen/dp_19"
                    android:layout_marginTop="@dimen/dp_26"
                    android:layout_marginRight="@dimen/dp_19"
                    android:background="@color/line_gray" />

                <TextView
                    android:id="@+id/tv_specialPic"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/line"
                    android:layout_marginLeft="@dimen/dp_19"
                    android:layout_marginTop="@dimen/dp_23"
                    android:text="特殊照片（许可证，医疗等特殊证件，无证可以随便放一张图片）"
                    android:textColor="@color/defaultBlueColor"
                    android:textSize="@dimen/sp_12" />

                <ImageView
                    android:id="@+id/iv_specialPic"
                    android:layout_width="@dimen/dp_78"
                    android:layout_height="@dimen/dp_78"
                    android:layout_below="@id/tv_specialPic"
                    android:layout_marginLeft="@dimen/dp_19"
                    android:layout_marginTop="@dimen/dp_13"
                    android:scaleType="fitXY"
                    android:src="@mipmap/img_add" />

                <View
                    android:id="@+id/line_specialPic"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_1"
                    android:layout_below="@id/iv_specialPic"
                    android:layout_marginLeft="@dimen/dp_19"
                    android:layout_marginTop="@dimen/dp_26"
                    android:layout_marginRight="@dimen/dp_19"
                    android:background="@color/line_gray" />
                <TextView
                    android:id="@+id/tv_shop_pic"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/line_specialPic"
                    android:layout_marginLeft="@dimen/dp_19"
                    android:layout_marginTop="@dimen/dp_19"
                    android:text="门店照（必须要有，如无证可以拍摄他人的）"
                    android:textColor="@color/defaultBlueColor"
                    android:textSize="@dimen/sp_12" />

                <ImageView
                    android:id="@+id/iv_shop_pic"
                    android:layout_width="@dimen/dp_78"
                    android:layout_height="@dimen/dp_78"
                    android:layout_below="@id/tv_shop_pic"
                    android:layout_marginLeft="@dimen/dp_19"
                    android:layout_marginTop="@dimen/dp_13"
                    android:scaleType="fitXY"
                    android:src="@mipmap/img_add" />

                <View
                    android:id="@+id/line_two"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_1"
                    android:layout_below="@id/iv_shop_pic"
                    android:layout_marginLeft="@dimen/dp_19"
                    android:layout_marginTop="@dimen/dp_26"
                    android:layout_marginRight="@dimen/dp_19"
                    android:background="@color/line_gray" />

                <TextView
                    android:id="@+id/tv_shop_in_pic"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/line_two"
                    android:layout_marginLeft="@dimen/dp_19"
                    android:layout_marginTop="@dimen/dp_19"
                    android:text="铺内照（必须要有，如无证可以拍摄他人的）"
                    android:textColor="@color/defaultBlueColor"
                    android:textSize="@dimen/sp_12" />

                <ImageView
                    android:id="@+id/iv_shop_in_pic"
                    android:layout_width="@dimen/dp_78"
                    android:layout_height="@dimen/dp_78"
                    android:layout_below="@id/tv_shop_in_pic"
                    android:layout_marginLeft="@dimen/dp_19"
                    android:layout_marginTop="@dimen/dp_13"
                    android:scaleType="fitXY"
                    android:src="@mipmap/img_add" />

                <ImageView
                    android:id="@+id/iv_shop_in_pic_two"
                    android:layout_width="@dimen/dp_78"
                    android:layout_height="@dimen/dp_78"
                    android:layout_below="@id/tv_shop_in_pic"
                    android:layout_marginLeft="@dimen/dp_15"
                    android:layout_marginTop="@dimen/dp_13"
                    android:layout_toRightOf="@id/iv_shop_in_pic"
                    android:scaleType="fitXY"
                    android:src="@mipmap/img_add"
                    android:visibility="gone" />

                <ImageView
                    android:id="@+id/iv_shop_in_pic_three"
                    android:layout_width="@dimen/dp_78"
                    android:layout_height="@dimen/dp_78"
                    android:layout_below="@id/tv_shop_in_pic"
                    android:layout_marginLeft="@dimen/dp_15"
                    android:layout_marginTop="@dimen/dp_13"
                    android:layout_toRightOf="@id/iv_shop_in_pic_two"
                    android:scaleType="fitXY"
                    android:src="@mipmap/img_add"
                    android:visibility="gone" />
                <TextView
                    android:id="@+id/tv_creditCode"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/iv_shop_in_pic"
                    android:layout_marginLeft="@dimen/dp_19"
                    android:layout_marginTop="@dimen/dp_9"
                    android:text="社会统一信用代码："
                    android:textColor="@color/text_color_black"
                    android:textSize="@dimen/sp_12" />

                <EditText
                    android:hint="必填，无证随意填写0"
                    android:id="@+id/et_creditCode"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/iv_shop_in_pic"
                    android:layout_marginLeft="@dimen/dp_5"
                    android:layout_marginTop="@dimen/dp_9"
                    android:layout_marginRight="@dimen/dp_19"
                    android:layout_toRightOf="@id/tv_creditCode"
                    android:background="@null"
                    android:textSize="@dimen/sp_12" />
                <TextView
                    android:id="@+id/tv_business_scope"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/tv_creditCode"
                    android:layout_marginLeft="@dimen/dp_19"
                    android:layout_marginTop="@dimen/dp_9"
                    android:text="经营范围："
                    android:textColor="@color/text_color_black"
                    android:textSize="@dimen/sp_12" />

                <EditText
                    android:hint="请填写与营业执照一样，无证填写0"
                    android:id="@+id/et_business_scope"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/tv_creditCode"
                    android:layout_marginLeft="@dimen/dp_5"
                    android:layout_marginTop="@dimen/dp_9"
                    android:layout_marginRight="@dimen/dp_19"
                    android:layout_toRightOf="@id/tv_business_scope"
                    android:background="@null"
                    android:textSize="@dimen/sp_12" />
                <TextView
                    android:id="@+id/tv_servicePhone"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/et_business_scope"
                    android:layout_marginLeft="@dimen/dp_19"
                    android:layout_marginTop="@dimen/dp_9"
                    android:text="客服电话："
                    android:textColor="@color/text_color_black"
                    android:textSize="@dimen/sp_12" />

                <EditText
                    android:hint="无座机，可填写手机号"
                    android:id="@+id/et_servicePhone"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/et_business_scope"
                    android:layout_marginLeft="@dimen/dp_5"
                    android:layout_marginTop="@dimen/dp_9"
                    android:layout_marginRight="@dimen/dp_19"
                    android:layout_toRightOf="@id/tv_servicePhone"
                    android:background="@null"
                    android:inputType="number"
                    android:textSize="@dimen/sp_12" />

                <TextView
                    android:id="@+id/tv_productDesc"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/tv_servicePhone"
                    android:layout_marginLeft="@dimen/dp_19"
                    android:layout_marginTop="@dimen/dp_9"
                    android:text="服务描述："
                    android:textColor="@color/text_color_black"
                    android:textSize="@dimen/sp_12" />

                <TextView
                    android:id="@+id/et_productDesc"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/tv_servicePhone"
                    android:layout_marginLeft="@dimen/dp_5"
                    android:layout_marginTop="@dimen/dp_9"
                    android:layout_marginRight="@dimen/dp_19"
                    android:layout_marginBottom="@dimen/dp_15"
                    android:layout_toRightOf="@id/tv_productDesc"
                    android:background="@null"
                    android:hint="请点击选择"
                    android:textSize="@dimen/sp_12" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_370"
                android:layout_marginTop="@dimen/dp_16"
                android:background="@drawable/shape_white">

                <TextView
                    android:id="@+id/tv_title_one"
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/dp_20"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="@dimen/dp_16"
                    android:text="经营者信息"
                    android:textColor="@color/text_color_black"
                    android:textSize="@dimen/sp_14" />

                <View
                    android:layout_width="@dimen/dp_21"
                    android:layout_height="@dimen/dp_1"
                    android:layout_marginLeft="@dimen/dp_105"
                    android:layout_marginTop="@dimen/dp_27"
                    android:background="@color/text_color_black" />

                <View
                    android:layout_width="@dimen/dp_21"
                    android:layout_height="@dimen/dp_1"
                    android:layout_alignParentRight="true"
                    android:layout_marginTop="@dimen/dp_27"
                    android:layout_marginRight="@dimen/dp_105"
                    android:background="@color/text_color_black" />

                <TextView
                    android:id="@+id/tv_manager_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/tv_title_one"
                    android:layout_marginLeft="@dimen/dp_19"
                    android:layout_marginTop="@dimen/dp_21"
                    android:text="姓名："
                    android:textColor="@color/text_color_black"
                    android:textSize="@dimen/sp_12" />

                <EditText
                    android:id="@+id/et_manager_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/tv_title_one"
                    android:layout_marginLeft="@dimen/dp_5"
                    android:layout_marginTop="@dimen/dp_21"
                    android:layout_marginRight="@dimen/dp_19"
                    android:layout_toRightOf="@id/tv_manager_name"
                    android:background="@null"
                    android:textColor="@color/text_color_black"
                    android:textSize="@dimen/sp_12" />

                <TextView
                    android:id="@+id/tv_tellphone"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/tv_manager_name"
                    android:layout_marginLeft="@dimen/dp_19"
                    android:layout_marginTop="@dimen/dp_9"
                    android:text="手机："
                    android:textColor="@color/text_color_black"
                    android:textSize="@dimen/sp_12" />

                <EditText
                    android:id="@+id/et_tellphone"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/tv_manager_name"
                    android:layout_marginLeft="@dimen/dp_5"
                    android:layout_marginTop="@dimen/dp_9"
                    android:layout_marginRight="@dimen/dp_19"
                    android:layout_toRightOf="@id/tv_tellphone"
                    android:background="@null"
                    android:inputType="number"
                    android:maxLength="11"
                    android:textColor="@color/text_color_black"
                    android:textSize="@dimen/sp_12" />


                <TextView
                    android:id="@+id/tv_id_card"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/tv_tellphone"
                    android:layout_marginLeft="@dimen/dp_19"
                    android:layout_marginTop="@dimen/dp_18"
                    android:text="身份证照"
                    android:textColor="@color/defaultBlueColor"
                    android:textSize="@dimen/sp_12" />

                <ImageView
                    android:id="@+id/iv_id_card_front"
                    android:layout_width="@dimen/dp_107"
                    android:layout_height="@dimen/dp_66"
                    android:layout_below="@id/tv_id_card"
                    android:layout_marginLeft="@dimen/dp_19"
                    android:layout_marginTop="@dimen/dp_13"
                    android:scaleType="fitXY"
                    android:src="@mipmap/ic_card_add" />

                <ImageView
                    android:id="@+id/iv_id_card_back"
                    android:layout_width="@dimen/dp_107"
                    android:layout_height="@dimen/dp_66"
                    android:layout_below="@id/tv_id_card"
                    android:layout_marginLeft="@dimen/dp_14"
                    android:layout_marginTop="@dimen/dp_13"
                    android:layout_toRightOf="@id/iv_id_card_front"
                    android:scaleType="fitXY"
                    android:src="@mipmap/ic_card_add" />

                <TextView
                    android:id="@+id/tv_idCardName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/iv_id_card_front"
                    android:layout_marginLeft="@dimen/dp_19"
                    android:layout_marginTop="@dimen/dp_9"
                    android:text="身份证姓名："
                    android:textColor="@color/text_color_black"
                    android:textSize="@dimen/sp_12" />

                <EditText
                    android:id="@+id/et_idCardName"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/iv_id_card_front"
                    android:layout_marginLeft="@dimen/dp_5"
                    android:layout_marginTop="@dimen/dp_9"
                    android:layout_marginRight="@dimen/dp_19"
                    android:layout_toRightOf="@id/tv_idCardName"
                    android:background="@null"
                    android:textColor="@color/text_color_black"
                    android:textSize="@dimen/sp_12" />

                <TextView
                    android:id="@+id/tv_idCardNumber"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/tv_idCardName"
                    android:layout_marginLeft="@dimen/dp_19"
                    android:layout_marginTop="@dimen/dp_9"
                    android:text="身份证号："
                    android:textColor="@color/text_color_black"
                    android:textSize="@dimen/sp_12" />

                <EditText
                    android:id="@+id/et_idCardNumber"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/tv_idCardName"
                    android:layout_marginLeft="@dimen/dp_5"
                    android:layout_marginTop="@dimen/dp_9"
                    android:layout_marginRight="@dimen/dp_19"
                    android:layout_toRightOf="@id/tv_idCardNumber"
                    android:background="@null"
                    android:digits="0123456789xX"
                    android:maxLength="18"
                    android:textColor="@color/text_color_black"
                    android:textSize="@dimen/sp_12" />

                <TextView
                    android:id="@+id/tv_title_idcard"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/tv_idCardNumber"
                    android:layout_marginLeft="@dimen/dp_19"
                    android:layout_marginTop="@dimen/dp_9"
                    android:text="身份证有效期："
                    android:textColor="@color/text_color_black"
                    android:textSize="@dimen/sp_12" />

                <TextView
                    android:id="@+id/tv_middle"
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/dp_30"
                    android:layout_below="@id/tv_title_idcard"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="@dimen/dp_9"
                    android:gravity="center"
                    android:text="至"
                    android:textColor="@color/text_color_black"
                    android:textSize="@dimen/sp_12" />

                <RelativeLayout
                    android:id="@+id/rl_end"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_30"
                    android:layout_below="@id/tv_title_idcard"
                    android:layout_marginLeft="@dimen/dp_20"
                    android:layout_marginTop="@dimen/dp_9"
                    android:layout_marginRight="@dimen/dp_10"
                    android:layout_toLeftOf="@id/tv_middle"
                    android:background="@drawable/shape_gray">

                    <TextView
                        android:id="@+id/tv_startTime"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:drawableRight="@mipmap/down_black"
                        android:gravity="center_vertical"
                        android:paddingLeft="@dimen/dp_18"
                        android:paddingRight="@dimen/dp_18"
                        android:text="2019-3-14"
                        android:textColor="@color/text_color_black"
                        android:textSize="@dimen/sp_12" />

                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_30"
                    android:layout_below="@id/tv_title_idcard"
                    android:layout_marginLeft="@dimen/dp_10"
                    android:layout_marginTop="@dimen/dp_9"
                    android:layout_marginRight="@dimen/dp_20"
                    android:layout_toRightOf="@id/tv_middle"
                    android:background="@drawable/shape_gray">

                    <TextView
                        android:id="@+id/tv_endTime"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
