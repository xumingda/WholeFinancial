<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/ll_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f7f7f7"
    android:orientation="vertical" >
    <RelativeLayout
        android:layout_marginRight="@dimen/dp_19"
        android:layout_marginLeft="@dimen/dp_19"
        android:layout_marginTop="@dimen/dp_7"
        android:background="@drawable/shape_white"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_64">
        <TextView
            android:gravity="center"
            android:id="@+id/tv_title"
            android:text="选择店铺："
            android:textSize="@dimen/sp_15"
            android:textColor="@color/text_black"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/dp_30"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/dp_16"
            />
        <TextView
            android:id="@+id/tv_select_shop"
            android:layout_marginRight="@dimen/dp_17"
            android:paddingRight="@dimen/dp_17"
            android:drawableRight="@mipmap/income_down"
            android:paddingLeft="@dimen/dp_17"
            android:text="所有店铺"
            android:gravity="center_vertical"
            android:textColor="#bebebe"
            android:textSize="@dimen/sp_12"
            android:layout_centerVertical="true"
            android:background="@drawable/shape_gray"
            android:layout_marginLeft="@dimen/dp_13"
            android:layout_toRightOf="@+id/tv_title"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_30"
            android:layout_alignParentRight="true"
            />
    </RelativeLayout>
    <RelativeLayout
        android:layout_marginRight="@dimen/dp_19"
        android:layout_marginLeft="@dimen/dp_19"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_41">
        <TextView
            android:layout_centerVertical="true"
            android:textColor="@color/text_black"
            android:textSize="@dimen/sp_13"
            android:layout_marginLeft="@dimen/dp_16"
            android:text="下单人"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/tv_price"
            android:layout_marginRight="@dimen/dp_25"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:textColor="@color/text_black"
            android:textSize="@dimen/sp_13"
            android:text="金额"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:layout_toLeftOf="@id/tv_price"
            android:id="@+id/tv_state"
            android:layout_marginRight="@dimen/dp_41"
            android:layout_centerVertical="true"
            android:textColor="@color/text_black"
            android:textSize="@dimen/sp_13"
            android:text="状态"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:layout_toLeftOf="@id/tv_state"
            android:layout_marginRight="@dimen/dp_41"
            android:layout_centerVertical="true"
            android:textColor="@color/text_black"
            android:textSize="@dimen/sp_13"
            android:text="桌号"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </RelativeLayout>
    <com.handmark.pulltorefresh.library.PullToRefreshListView

        android:layout_marginRight="@dimen/dp_19"
        android:layout_marginLeft="@dimen/dp_19"
        android:background="@color/tab_background"
        android:id="@+id/lv_pending_order"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:divider="#f4f4f4"
        android:dividerHeight="@dimen/dp_1"
        />
    <LinearLayout
        android:visibility="gone"
        android:id="@+id/ll_empty"
        android:orientation="vertical"
        android:layout_marginRight="@dimen/dp_19"
        android:layout_marginLeft="@dimen/dp_19"
        android:background="@drawable/shape_white"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <View
            android:layout_marginTop="@dimen/dp_100"
            android:layout_below="@id/rl_head"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_97"
            android:background="@mipmap/img_empty"
            />
        <TextView
            android:gravity="center"
            android:layout_marginTop="@dimen/dp_20"
            android:layout_centerHorizontal="true"
            android:layout_below="@id/v_empty"
            android:textColor="#5D646E"
            android:textSize="@dimen/sp_14"
            android:text="还没有订单哦"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
    </LinearLayout>

</LinearLayout>