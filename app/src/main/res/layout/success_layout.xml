<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal"
    >
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="@dimen/dp_246"
        android:layout_height="@dimen/dp_281"
        android:background="@drawable/shape_white"
        android:gravity="center_horizontal"
        >

        <ImageView
            android:layout_marginTop="@dimen/dp_52"
            android:layout_width="@dimen/dp_48"
            android:layout_height="@dimen/dp_52"
            android:src="@mipmap/update_success"
            android:scaleType="fitCenter"
            />
        <TextView
            android:textSize="@dimen/sp_17"
            android:layout_marginTop="@dimen/dp_26"
            android:id="@+id/tv_clock_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="修改成功"
            android:textColor="@color/text_black"
            />


        <TextView
            android:layout_marginTop="@dimen/dp_49"
            android:background="@mipmap/btn_clock_success"
            android:id="@+id/tv_commit"
            android:layout_width="@dimen/dp_152"
            android:layout_height="@dimen/dp_50"
            android:text="确定"
            android:textSize="@dimen/sp_17"
            android:textColor="#ffffff"
            android:gravity="center"
           />
    </LinearLayout>
</LinearLayout>

