<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f4f4f4"
    android:id="@+id/ll_main"
    android:orientation="vertical" >

       <LinearLayout
           android:layout_marginTop="@dimen/dp_16"
           android:layout_marginBottom="@dimen/dp_16"
           android:layout_marginLeft="@dimen/dp_14"
           android:layout_marginRight="@dimen/dp_14"
           android:layout_width="match_parent"
           android:layout_height="match_parent"
           android:orientation="vertical"
           >
           <RelativeLayout
               android:layout_width="match_parent"
               android:layout_height="match_parent"
               android:background="@drawable/shape_white"
               >

               <TextView
                   android:id="@+id/tv_income"
                   android:gravity="center"
                   android:textColor="@color/errorColor"
                   android:textSize="@dimen/sp_20"
                   android:layout_marginTop="@dimen/dp_36"
                   android:background="@drawable/circle"
                   android:layout_width="@dimen/dp_152"
                   android:layout_height="@dimen/dp_152"
                   android:layout_centerHorizontal="true" />
               <RelativeLayout
                   android:id="@+id/rl_type_select"
                   android:background="@drawable/shape_black"
                   android:layout_below="@id/tv_income"
                   android:layout_centerHorizontal="true"
                   android:layout_marginTop="@dimen/dp_35"
                   android:layout_width="@dimen/dp_133"
                   android:layout_height="@dimen/dp_34">
                   <ImageView
                       android:layout_marginTop="@dimen/dp_8"
                       android:layout_marginLeft="@dimen/dp_12"
                       android:scaleType="fitCenter"
                       android:src="@mipmap/income"
                       android:layout_width="@dimen/dp_18"
                       android:layout_height="@dimen/dp_17" />
                   <ImageView
                       android:layout_alignParentRight="true"
                       android:layout_marginRight="@dimen/dp_14"
                       android:layout_marginTop="@dimen/dp_14"
                       android:scaleType="fitCenter"
                       android:src="@mipmap/income_down"
                       android:layout_width="@dimen/dp_12"
                       android:layout_height="@dimen/dp_8" />
                   <TextView
                       android:id="@+id/tv_type"
                       android:layout_centerVertical="true"
                       android:layout_marginLeft="@dimen/dp_37"
                       android:layout_width="@dimen/dp_60"
                       android:layout_height="wrap_content"
                       android:text="今日营收"
                       android:ellipsize="end"
                       android:singleLine="true"
                       android:textColor="@color/text_color_black"
                       android:textSize="@dimen/sp_15"
                       />
               </RelativeLayout>

           </RelativeLayout>

       </LinearLayout>

</LinearLayout>