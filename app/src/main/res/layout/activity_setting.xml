<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f4f4f4"
    android:orientation="vertical" >

    <RelativeLayout
        android:id="@+id/rl_head"
        style="@style/tabTitleStyle">

        <TextView
            android:id="@+id/tv_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="设置"
            android:textColor="@color/text_black"
            android:textSize="@dimen/sp_15" />


        <ImageView
            android:id="@+id/iv_top_back"
            android:layout_width="@dimen/dp_8"
            android:layout_height="@dimen/dp_14"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/dp_14"
            android:src="@mipmap/top_back"
            android:gravity="center_vertical"
            android:scaleType="fitCenter" />
        <View
            android:id="@+id/view_back"
            android:layout_width="100dp"
            android:layout_height="match_parent"/>
    </RelativeLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/tab_background"
        android:orientation="vertical" >

        <!-- 页签指示部分 -->

        <RelativeLayout
            android:id="@+id/rl_update_pwd"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_71">

            <ImageView
                android:id="@+id/iv_update_pwd"
                android:layout_marginLeft="@dimen/dp_14"
                android:layout_centerVertical="true"
                android:src="@mipmap/update_pwd"
                android:scaleType="fitCenter"
                android:layout_width="@dimen/dp_26"
                android:layout_height="@dimen/dp_27" />

            <TextView
                android:layout_toRightOf="@id/iv_update_pwd"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_12"
                android:textSize="@dimen/sp_13"
                android:text="修改密码"
                android:textColor="@color/text_black"
                android:layout_centerVertical="true"
                />

            <ImageView
                android:src="@mipmap/set_right"
                android:layout_alignParentRight="true"
                android:layout_marginRight="@dimen/dp_14"
                android:scaleType="fitCenter"
                android:layout_centerVertical="true"
                android:layout_width="@dimen/dp_6"
                android:layout_height="@dimen/dp_11" />
        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_1"
            android:layout_marginLeft="@dimen/dp_14"
            android:layout_marginRight="@dimen/dp_14"
            android:background="#F4F4F4"
            />


        <RelativeLayout
            android:id="@+id/rl_out"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_71">

            <ImageView
                android:id="@+id/iv_login_out"
                android:layout_marginLeft="@dimen/dp_14"
                android:layout_centerVertical="true"
                android:src="@mipmap/login_out"
                android:scaleType="fitCenter"
                android:layout_width="@dimen/dp_26"
                android:layout_height="@dimen/dp_27" />

            <TextView
                android:layout_toRightOf="@id/iv_login_out"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_12"
                android:textSize="@dimen/sp_13"
                android:text="退出登录"
                android:textColor="@color/text_black"
                android:layout_centerVertical="true"
                />

            <ImageView
                android:src="@mipmap/set_right"
                android:layout_alignParentRight="true"
                android:layout_marginRight="@dimen/dp_14"
                android:scaleType="fitCenter"
                android:layout_centerVertical="true"
                android:layout_width="@dimen/dp_6"
                android:layout_height="@dimen/dp_11" />
        </RelativeLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_1"
            android:layout_marginLeft="@dimen/dp_14"
            android:layout_marginRight="@dimen/dp_14"
            android:background="#F4F4F4"
            />
    </LinearLayout>

</LinearLayout>